                                    </Grid.ColumnDefinitions>

                                    
                                    <PasswordBox x:Name="txt_oldpassword"
                                         Grid.Column="0"
                                         Margin="5 5 0 5"
                                         Height="30"
                                         BorderThickness="0"
                                         VerticalAlignment="Center"
                                         FontSize="20"
                                         MaxLength="30"
                                         BorderBrush="Transparent"
                                         Background="Transparent">

                                    </PasswordBox>

                                </Grid>


                            </Border>

                            <Border Grid.Column="1"
