                                    </PasswordBox>

                                </Grid>


                            </Border>

                            <Border Grid.Column="2"
                                Background="Transparent"
                                Margin="20 5 5 5"
                                CornerRadius="15"
                                BorderThickness="1"
                                BorderBrush="LightGreen">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <PasswordBox x:Name="txt_returnpassword"
                                         Grid.Column="0"
                                         Margin="5 5 0 5"
                                         Height="30"
                                         BorderThickness="0"
                                         VerticalAlignment="Center"
                                         FontSize="20"
                                         MaxLength="30"
                                         BorderBrush="Transparent"
                                         Background="Transparent">

                                    </PasswordBox>

                                </Grid>


                            </Border>

                           
                        </Grid>
                    </Grid>

                    <Button Grid.Column="1"
                            Click="saqlsh_security_Click"
                                    x:Name="saqlsh_sacury"
                                    Height="60"
                                    HorizontalAlignment="Right"
                                    Margin="0 0 7 0"
                                    Content="Saqlash"
                                    Style="{DynamicResource saqlsh}">
                    </Button>
                    <StackPanel
                        Grid.Row="1"
                        Orientation="Horizontal">
                        
