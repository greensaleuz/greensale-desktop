                                </Grid.ColumnDefinitions>

                                <Path Grid.Column="0"
                                      Data="{DynamicResource User}"
                                      Stretch="Uniform"
                                      Fill="{DynamicResource FourthBackground}"
                                      Margin="10"/>
                                
                                <TextBox x:Name="txt_name"
                                         Grid.Column="1"
                                         Margin="5 5 0 5"
                                         Height="30"
                                         BorderThickness="0"
                                         VerticalAlignment="Center"
                                         FontSize="20"
                                         MaxLength="30"
                                         BorderBrush="Transparent"
                                         Background="Transparent">

                                </TextBox>

                            </Grid>
                             
                            
                        </Border>

                        <Label Grid.Row="2"
