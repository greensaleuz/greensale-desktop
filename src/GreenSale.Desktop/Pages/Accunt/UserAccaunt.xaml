                        <Button Grid.Row="3"
                                    x:Name="saqlsh_location"
                                    Height="60"
                                HorizontalAlignment="Right"
                                    Margin="0 20 7 0"
                                    Content="Saqlash"
                                    Style="{DynamicResource saqlsh}">
                        </Button>

                    </Grid>

                </Grid>
            </Grid>


        </Border>

        <Border   Grid.Row="2"
              Margin="20 10 10 20"
              Style="{DynamicResource borderseting}">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="1.5*"/>
                    <RowDefinition Height="4*"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0"
                       Background="GhostWhite"
                        CornerRadius="15 15 0 0">
                    <Label Grid.Row="0" 
                            Content="Hafsizlik malumotlari"
                            FontSize="25"
                            VerticalAlignment="Top">

                    </Label>
                </Border>
                <Grid Grid.Row="1">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2.5*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Grid Grid.Column="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
