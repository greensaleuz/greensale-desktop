                                    <ComboBox Grid.Column="1"
                                          x:Name="cmbRegion"
                                          SelectionChanged="cmbRegion_SelectionChanged"
                                          VerticalContentAlignment="Center"
                                          FontSize="16"       
                                          HorizontalAlignment="Left"
                                          BorderThickness="0"
                                          
