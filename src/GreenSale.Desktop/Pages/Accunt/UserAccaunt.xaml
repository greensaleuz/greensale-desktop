                        </Grid.RowDefinitions>

                        <Label Grid.Row="0"
                               Content="Adres"
                               VerticalContentAlignment="Bottom"
                               FontSize="25"
                               Margin="20 0 0 0">

                        </Label>
                        <Border Grid.Row="1"
                                Background="Transparent"
                                Margin="20 5 5 5"
                                CornerRadius="15"
                                BorderThickness="1"
                                BorderBrush="LightGreen">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="45"/>
                                    <ColumnDefinition Width="*"/>
