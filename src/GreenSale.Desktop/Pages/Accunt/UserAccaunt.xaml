                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Border Grid.Column="0"
                                Background="Transparent"
                                Margin="20 5 5 5"
                                CornerRadius="15"
                                BorderThickness="1"
                                BorderBrush="LightGreen">
                                <Grid>
                                    <Grid.ColumnDefinitions>
