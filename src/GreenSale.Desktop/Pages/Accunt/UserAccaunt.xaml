                                    Height="60"
                                    HorizontalAlignment="Right"
                                    Margin="0 20 7 0"
                                    Content="Saqlash"
                                    Style="{DynamicResource saqlsh}">
                        </Button>

                    </Grid>

                </Grid>
            </Grid>
           
           
