<UserControl x:Class="GreenSale.Desktop.Companents.Images.BuyerUpdateImageComponent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GreenSale.Desktop.Companents.Images"
             mc:Ignorable="d" 
             d:DesignHeight="70" d:DesignWidth="70">
    <Border x:Name="btnPicture"
            CornerRadius="10"
            Height="70"
            Width="70"
            Cursor="Hand"
            Margin="1"
            Padding="5"
            BorderThickness="1"
            BorderBrush="{DynamicResource SelectedBorderColor}"
            MouseDown="btnPicture_MouseDown">
        <Border.Background>
            <ImageBrush Stretch="UniformToFill" x:Name="ImgBuyer"/>
        </Border.Background>

    </Border>
</UserControl>
